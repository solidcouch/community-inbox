{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "SolidCouch Geoindex",
    "description": "This is a geoindex for Solid apps. Read more at https://github.com/solidcouch/geoindex"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/inbox": {
      "post": {
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/ld+json": {
              "schema": {
                "$ref": "#/components/schemas/notification"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "notification": {
        "type": "object",
        "properties": {
          "@context": {
            "type": "string",
            "const": "https://www.w3.org/ns/activitystreams"
          },
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "Join",
              "Leave"
            ]
          },
          "actor": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "Person"
              },
              "id": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": [
              "type",
              "id"
            ]
          },
          "object": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "Group"
                ]
              },
              "id": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": [
              "type",
              "id"
            ]
          }
        },
        "required": [
          "@context",
          "type",
          "actor",
          "object"
        ],
        "additionalProperties": false
      }
    }
  }
}